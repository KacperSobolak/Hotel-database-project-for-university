<Window x:Class="Hotel.MVVM.View.PopUp.GuestPopUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.MVVM.View.PopUp"
        mc:Ignorable="d"
        Title="GuestPopUpView" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Imię:" Grid.Row="0" Margin="0,0,0,5" />
        <TextBox Text="{Binding Guest.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" />

        <TextBlock Text="Nazwisko:" Grid.Row="2" Margin="0,10,0,5" />
        <TextBox Text="{Binding Guest.Surname, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" />

        <TextBlock Text="Telefon:" Grid.Row="4" Margin="0,10,0,5" />
        <TextBox Text="{Binding Guest.Phone, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" />

        <TextBlock Text="Email:" Grid.Row="6" Margin="0,10,0,5" />
        <TextBox Text="{Binding Guest.Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" />

        <TextBlock Text="Data urodzenia:" Grid.Row="8" Margin="0,10,0,5" />
        <DatePicker SelectedDate="{Binding Guest.DateOfBirth, UpdateSourceTrigger=PropertyChanged}" Grid.Row="9" />

        <TextBlock Text="{Binding ValidationError}" Foreground="Red" FontWeight="Bold" Grid.Row="10" Margin="0,10,0,0" TextWrapping="Wrap" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="11" Margin="0,20,0,0">
            <Button Content="Anuluj" Command="{Binding CancelCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                Margin="0,0,10,0" />
            <Button Content="{Binding ButtonName}" Command="{Binding ConfirmCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                IsDefault="True" />
        </StackPanel>
    </Grid>

</Window>
